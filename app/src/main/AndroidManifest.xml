<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_news"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_news"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name=".screen.SplashScreen"
            android:exported="true"
            android:theme="@style/SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".screen.detail.DetailActivity"
            android:exported="false"
            android:label="@string/title_activity_detail" />
        <activity
            android:name=".screen.profile.ProfileActivity"
            android:exported="false"
            android:parentActivityName=".screen.newslist.NewsListActivity" />
        <activity
            android:name=".screen.newslist.NewsListActivity"
            android:exported="false" />
    </application>

</manifest>